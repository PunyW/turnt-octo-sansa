<h1>Sign in</h1>
<% if notice %>
    <div class="panel callout radius">
      <h5><%= notice %></h5>
    </div>
<% end %>

<%= form_tag session_path do %>
    Username: <%= text_field_tag :username, params[:username] %>
    Password: <%= password_field_tag :password, params[:password] %>
    <%= submit_tag "Log in" %>
<% end %>