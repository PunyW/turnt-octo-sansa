<h2>
  <%= @brewery.name %>
  <% if not @brewery.active %>
    <span class="label info">retired</span>
  <% end %>

</h2>

<i>
  Established in <%= @brewery.year %>
</i>
<hr>
<p>Number of beers: <%= @brewery.beers.count %></p>
<p>
  <% if !@brewery.ratings.empty? %>
      With <%= pluralize(@brewery.ratings.count, 'rating') %>, average of <%= @brewery.average_rating %>
  <% end %>
</p>

<table>
    <thead>
        <tr>
          <th>Beers</th>
        </tr>
    </thead>
    <tbody>
      <% @brewery.beers.each do |beer| %>
        <tr>
          <td><%= link_to beer.name, beer %></td>
        </tr>
      <% end %>
    </tbody>
</table>
<%= link_to 'change activity', toggle_activity_brewery_path(@brewery.id), method: :post, class: 'button success' %>
<%= edit_and_destroy_buttons(@brewery) %>
