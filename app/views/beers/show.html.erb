<% if notice %>
    <div class="panel">
      <h5><%= notice %></h5>
    </div>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<p>
  <% if @beer.ratings.empty? %>
      <p>Beer has not yet been rated!</p>
  <% else %>
      Has <%= pluralize(@beer.ratings.count, 'rating') %>, with average of <%= @beer.average_rating %>
  <% end %>
</p>

<% if current_user %>
    <h4>Give a rating:</h4>
    <%= form_for(@rating) do |f| %>
        <%= f.hidden_field :beer_id %>
        score: <%= f.number_field :score %>
        <%= f.submit %>
    <% end %>

    <%= link_to 'Edit', edit_beer_path(@beer) %> |
<% end %>
<%= link_to 'Back', beers_path %>
